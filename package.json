{
	"name": "radix-site",
	"version": "0.0.0",
	"private": true,
	"packageManager": "pnpm@10.2.0",
	"engines": {
		"node": "20.x"
	},
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"prettier": "prettier --write .",
		"typecheck": "tsc --noEmit",
		"scraper:setup": "docker run -it --name radix_algolia --env-file=./algolia/.env -e \"CONFIG=$(cat ./algolia/config.development.json | jq -r tostring)\" algolia/docsearch-scraper",
		"scraper:reset": "docker rm radix_algolia && pnpm scraper:setup",
		"scraper:run": "docker start radix_algolia",
		"scraper:production": "docker run -it --env-file=./algolia/.env -e \"CONFIG=$(cat ./algolia/config.json | jq -r tostring)\" algolia/docsearch-scraper"
	},
	"dependencies": {
		"@algolia/autocomplete-core": "^1.19.4",
		"@algolia/autocomplete-preset-algolia": "^1.19.4",
		"@algolia/client-search": "^4.25.2",
		"@radix-ui/colors": "3.0.0",
		"@radix-ui/primitive": "1.1.2",
		"@radix-ui/react-accordion": "^1.2.12",
		"@radix-ui/react-icons": "1.3.2",
		"@radix-ui/themes": "3.2.1",
		"algoliasearch": "^4.25.2",
		"bezier-easing": "^2.1.0",
		"codesandbox": "^2.2.3",
		"colorjs.io": "0.5.2",
		"compare-versions": "^3.6.0",
		"esbuild": "0.19.5",
		"eslint-config-next": "^14.2.33",
		"glob": "^10.4.5",
		"gray-matter": "^4.0.3",
		"hast-util-to-html": "^9.0.5",
		"hast-util-to-string": "^3.0.1",
		"lodash.debounce": "^4.0.8",
		"mdx-bundler": "^10.1.1",
		"next": "^14.2.33",
		"next-themes": "^0.3.0",
		"node-fetch": "^3.3.2",
		"parse-numeric-range": "^1.3.0",
		"postcss": "^8.5.6",
		"prism-react-renderer": "^2.4.1",
		"prismjs": "^1.30.0",
		"radix-ui": "1.4.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-remove-scroll": "^2.7.1",
		"refractor": "^3.6.0",
		"rehype": "^11.0.0",
		"rehype-parse": "^9.0.1",
		"remark-slug": "^6.1.0",
		"scroll-into-view-if-needed": "^3.1.0",
		"smoothscroll-polyfill": "^0.4.4",
		"tinycolor2": "^1.6.0",
		"unified": "^11.0.5",
		"unist-builder": "^4.0.0",
		"unist-util-visit": "^5.0.0",
		"usehooks-ts": "^3.1.1"
	},
	"devDependencies": {
		"@types/lodash.debounce": "^4.0.9",
		"@types/node": "20.12.10",
		"@types/react": "^18.3.26",
		"@types/react-dom": "^18.3.7",
		"@types/refractor": "^3.4.1",
		"@types/smoothscroll-polyfill": "^0.3.4",
		"@types/tinycolor2": "^1.4.6",
		"@types/unist": "^3.0.3",
		"autoprefixer": "^10.4.21",
		"husky": "^9.1.7",
		"prettier": "^3.6.2",
		"pretty-quick": "^4.2.2",
		"sucrase": "3.29.0",
		"typescript": "^5.9.3"
	},
